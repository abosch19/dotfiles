#!/usr/bin/env bash

set -euo pipefail

##? Setups the environment
#?? 1.0.0
##?
##? Usage:
##?    install

echo "ðŸš€ Welcome to the abosch19/dotfiles installer!"
echo "-------------------------------------------------"
echo
export DOTFILES_PATH="$HOME/.dotfiles"
echo "ðŸ‘‰  Cloning into: '$DOTFILES_PATH'"

# To test that git is installed (if not macOS will prompt an installer)
git --version

git clone --depth 1 git@github.com:abosch19/dotfiles.git "$DOTFILES_PATH"

# Check if ZSH is installed
if ! command -v zsh &> /dev/null
then
  echo "ðŸš¨ ZSH is not installed. Please install it and run this script again."
  exit 1
else
    zsh "$DOTFILES_PATH/scripts/install.sh"
fi
